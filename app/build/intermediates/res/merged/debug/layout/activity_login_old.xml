<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:id="@+id/hhh"
    android:background="#ffffff">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btn_Login"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="Login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtUserName"
        android:layout_above="@+id/edtPassLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_alignRight="@+id/edtPassLogin"
        android:layout_alignEnd="@+id/edtPassLogin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtPassLogin"
        android:layout_above="@+id/btn_Login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btn_Login"
        android:layout_alignEnd="@+id/btn_Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/edtPassLogin"
        android:layout_alignBottom="@+id/edtPassLogin"
        android:layout_alignLeft="@+id/edtPassLogin"
        android:layout_alignStart="@+id/edtPassLogin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goToSignUpString"
        android:id="@+id/textView7"
        android:layout_below="@+id/btn_Login"
        android:layout_alignRight="@+id/btn_Login"
        android:layout_alignEnd="@+id/btn_Login"
        android:layout_marginTop="42dp"
        android:onClick="goToSignUp" />

</RelativeLayout>

